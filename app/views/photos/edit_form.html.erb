<h1>Edit photo</h1>

<form action="http://localhost:3000/update_photo/<%= @p.id %>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="caption">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="image_url">
  </div>
  <div>
    <button>Update Photo</button>
  </div>
</form>

